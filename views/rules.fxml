<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="controllers.RuleController" spacing="15">
    
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    
    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label text="Governance Rules Management" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        
        <Button text="Refresh" onAction="#handleRefresh"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    </HBox>
    
    <Separator/>
    
    <!-- Split: Table and Form -->
    <SplitPane dividerPositions="0.6" VBox.vgrow="ALWAYS">
        
        <!-- Left: Table -->
        <VBox spacing="10">
            <Label text="Existing Rules" style="-fx-font-weight: bold;"/>
            
            <TableView fx:id="ruleTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="ruleNameColumn" text="Rule Name" prefWidth="200"/>
                    <TableColumn fx:id="ruleTypeColumn" text="Type" prefWidth="150"/>
                    <TableColumn fx:id="resourceTypeColumn" text="Resource" prefWidth="100"/>
                    <TableColumn fx:id="actionTypeColumn" text="Action" prefWidth="100"/>
                    <TableColumn fx:id="activeColumn" text="Active" prefWidth="60"/>
                </columns>
            </TableView>
            
            <HBox spacing="10">
                <Button text="Toggle Status" onAction="#handleToggleStatus"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                
                <Button text="Delete Rule" onAction="#handleDelete"
                        style="-fx-background-color: #F44336; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
        
        <!-- Right: Create Form with ScrollPane -->
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <VBox spacing="10" style="-fx-padding: 10;">
                <Label text="Create New Rule" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                
                <Label text="Rule Name:"/>
                <TextField fx:id="ruleNameField" promptText="e.g., Idle EC2 Detection"/>
                
                <Label text="Rule Type:"/>
                <ComboBox fx:id="ruleTypeCombo" promptText="Select type" maxWidth="Infinity"/>
                
                <Label text="Resource Type:"/>
                <ComboBox fx:id="resourceTypeCombo" promptText="Select resource" maxWidth="Infinity"/>
                
                <Label text="Action Type:"/>
                <ComboBox fx:id="actionTypeCombo" promptText="Select action" maxWidth="Infinity"/>
                
                <Separator/>
                
                <Label text="Condition Settings" style="-fx-font-weight: bold;"/>
                
                <Label text="Metric (e.g., CPU):"/>
                <TextField fx:id="metricField" promptText="CPU"/>
                
                <Label text="Operator:"/>
                <ComboBox fx:id="operatorCombo" promptText="Select operator" maxWidth="Infinity"/>
                
                <Label text="Value:"/>
                <TextField fx:id="valueField" promptText="e.g., 5.0"/>
                
                <Label text="Duration (days):"/>
                <TextField fx:id="durationField" promptText="e.g., 7"/>
                
                <Region VBox.vgrow="ALWAYS" minHeight="20"/>
                
                <Button text="Create Rule" onAction="#handleCreate" maxWidth="Infinity"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-height: 35px;"/>
            </VBox>
        </ScrollPane>
    </SplitPane>
</VBox>
