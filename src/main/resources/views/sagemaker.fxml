<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="controllers.SageMakerController" spacing="15">
    
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    
    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label text="SageMaker Endpoints Monitor" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #ED7D27;"/>
        <Region HBox.hgrow="ALWAYS"/>
        
        <Button text="Refresh" onAction="#handleRefresh"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        
        <Button text="Sync from AWS" onAction="#handleSyncFromAWS"
                style="-fx-background-color: #FF9900; -fx-text-fill: white;"/>
        
        <Button text="Detect Idle" onAction="#handleDetectIdle"
                style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
    </HBox>
    
    <Separator/>
    
    <!-- Table -->
    <TableView fx:id="sageMakerTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="endpointNameColumn" text="Endpoint Name" prefWidth="250"/>
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="120"/>
            <TableColumn fx:id="modelColumn" text="Model Name" prefWidth="200"/>
            <TableColumn fx:id="instanceTypeColumn" text="Instance Type" prefWidth="150"/>
            <TableColumn fx:id="invocationsColumn" text="Invocations" prefWidth="100"/>
            <TableColumn fx:id="idleColumn" text="Idle" prefWidth="60"/>
        </columns>
    </TableView>
    
    <!-- Action Buttons -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Actions:" style="-fx-font-weight: bold; -fx-text-fill: #ED7D27;"/>
        
        <Button text="Start Notebook" onAction="#handleStart"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        
        <Button text="Stop Notebook" onAction="#handleStop"
                style="-fx-background-color: #FF9800; -fx-text-fill: white;"/>
        
        <Button text="Delete Resource" onAction="#handleDelete"
                style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
    </HBox>
</VBox>
