<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="controllers.RDSController" spacing="15">
    
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    
    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label text="RDS Instances Monitor" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #ED7D27;"/>
        <Region HBox.hgrow="ALWAYS"/>
        
        <Button text="Refresh" onAction="#handleRefresh"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        
        <Button text="Sync from AWS" onAction="#handleSyncFromAWS"
                style="-fx-background-color: #FF9900; -fx-text-fill: white;"/>
        
        <Button text="Detect Idle" onAction="#handleDetectIdle"
                style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
    </HBox>
    
    <Separator/>
    
    <!-- Table -->
    <TableView fx:id="rdsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="identifierColumn" text="DB Identifier" prefWidth="200"/>
            <TableColumn fx:id="classColumn" text="Instance Class" prefWidth="120"/>
            <TableColumn fx:id="engineColumn" text="Engine" prefWidth="100"/>
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
            <TableColumn fx:id="storageColumn" text="Storage (GB)" prefWidth="100"/>
            <TableColumn fx:id="cpuColumn" text="CPU %" prefWidth="80"/>
            <TableColumn fx:id="connectionsColumn" text="Connections" prefWidth="100"/>
            <TableColumn fx:id="idleColumn" text="Idle" prefWidth="60"/>
        </columns>
    </TableView>
    
    <!-- Action Buttons -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Actions:" style="-fx-font-weight: bold; -fx-text-fill: #ED7D27;"/>
        
        <Button text="Start Instance" onAction="#handleStart"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        
        <Button text="Stop Instance" onAction="#handleStop"
                style="-fx-background-color: #FF9800; -fx-text-fill: white;"/>
        
        <Button text="Delete Instance" onAction="#handleDelete"
                style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
    </HBox>
</VBox>
