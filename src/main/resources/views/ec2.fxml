<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="controllers.EC2Controller" spacing="15">
    
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    
    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label text="EC2 Instances Monitor" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        
        <Button fx:id="refreshButton" text="Refresh" onAction="#handleRefresh"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        
        <Button text="Sync from AWS" onAction="#handleSyncFromAWS"
                style="-fx-background-color: #FF9900; -fx-text-fill: white;"/>
        
        <Button fx:id="detectIdleButton" text="Detect Idle" onAction="#handleDetectIdle"
                style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
    </HBox>
    
    <Separator/>
    
    <!-- Table -->
    <TableView fx:id="ec2Table" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="instanceIdColumn" text="Instance ID" prefWidth="180"/>
            <TableColumn fx:id="instanceTypeColumn" text="Type" prefWidth="120"/>
            <TableColumn fx:id="stateColumn" text="State" prefWidth="100"/>
            <TableColumn fx:id="availabilityZoneColumn" text="AZ" prefWidth="120"/>
            <TableColumn fx:id="cpuColumn" text="CPU %" prefWidth="80"/>
            <TableColumn fx:id="idleColumn" text="Idle" prefWidth="60"/>
        </columns>
    </TableView>
    
    <!-- Action Buttons -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Actions:" style="-fx-font-weight: bold;"/>
        
        <Button fx:id="startButton" text="Start Instance" onAction="#handleStart"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        
        <Button fx:id="stopButton" text="Stop Instance" onAction="#handleStop"
                style="-fx-background-color: #FFA500; -fx-text-fill: white;"/>
        
        <Button fx:id="terminateButton" text="Terminate Instance" onAction="#handleTerminate"
                style="-fx-background-color: #F44336; -fx-text-fill: white;"/>
    </HBox>
</VBox>
