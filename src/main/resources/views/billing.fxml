<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="controllers.BillingController" spacing="15">
    
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    
    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label text="Billing Reports" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #ED7D27;"/>
        <Region HBox.hgrow="ALWAYS"/>
        
        <Label text="Total Cost:" style="-fx-font-weight: bold; -fx-text-fill: #ED7D27;"/>
        <Label fx:id="totalCostLabel" text="\$0.00" 
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>
        
        <Button text="Sync from AWS" onAction="#handleSyncFromAWS"
                style="-fx-background-color: #FF9800; -fx-text-fill: white;"/>
        
        <Button text="Refresh" onAction="#handleRefresh"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    </HBox>
    
    <Separator/>
    
    <!-- Date Range Filter -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <Label text="Date Range:" style="-fx-font-weight: bold; -fx-text-fill: #ED7D27;"/>
        
        <Label text="From:" style="-fx-text-fill: #ED7D27;"/>
        <DatePicker fx:id="startDatePicker"/>
        
        <Label text="To:" style="-fx-text-fill: #ED7D27;"/>
        <DatePicker fx:id="endDatePicker"/>
        
        <Button text="Filter" onAction="#handleFilter"
                style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
    </HBox>
    
    <Separator/>
    
    <!-- Split: Chart and Table -->
    <SplitPane dividerPositions="0.4" VBox.vgrow="ALWAYS" orientation="VERTICAL">
        
        <!-- Top: Pie Chart -->
        <VBox spacing="10">
            <Label text="Cost Distribution by Service" style="-fx-font-weight: bold;"/>
            <PieChart fx:id="costPieChart" VBox.vgrow="ALWAYS"/>
        </VBox>
        
        <!-- Bottom: Table -->
        <VBox spacing="10">
            <Label text="Billing Records" style="-fx-font-weight: bold;"/>
            
            <TableView fx:id="billingTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="serviceColumn" text="Service Name" prefWidth="200"/>
                    <TableColumn fx:id="costColumn" text="Cost Amount" prefWidth="150"/>
                    <TableColumn fx:id="periodColumn" text="Period" prefWidth="250"/>
                </columns>
            </TableView>
        </VBox>
    </SplitPane>
</VBox>
