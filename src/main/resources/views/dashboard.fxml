<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.DashboardController">
    
    <top>
        <VBox style="-fx-background-color: #000000;">
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 15;">
                <Label text="AWS Governance Dashboard" style="-fx-text-fill: #ED7D27; -fx-font-size: 20px; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </Region>
                <Label fx:id="welcomeLabel" text="Welcome, User" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
            </HBox>
            
            <HBox alignment="CENTER" spacing="30" style="-fx-padding: 15; -fx-background-color: #141414ff;">
                <VBox alignment="CENTER" spacing="5">
                    <Label fx:id="ec2HeaderLabel" text="EC2 Instances" style="-fx-text-fill: #FFFFFF; -fx-font-size: 12px;"/>
                    <Label fx:id="totalEC2Label" text="0" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>
                
                <VBox alignment="CENTER" spacing="5">
                    <Label fx:id="rdsHeaderLabel" text="RDS Instances" style="-fx-text-fill: #FFFFFF; -fx-font-size: 12px;"/>
                    <Label fx:id="totalRDSLabel" text="0" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>
                
                <VBox alignment="CENTER" spacing="5">
                    <Label fx:id="ecsHeaderLabel" text="ECS Services" style="-fx-text-fill: #FFFFFF; -fx-font-size: 12px;"/>
                    <Label fx:id="totalECSLabel" text="0" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>
                
                <VBox alignment="CENTER" spacing="5">
                    <Label fx:id="sageMakerHeaderLabel" text="SageMaker" style="-fx-text-fill: #FFFFFF; -fx-font-size: 12px;"/>
                    <Label fx:id="totalSageMakerLabel" text="0" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>
                
                <Separator orientation="VERTICAL"/>
    
                
                <VBox alignment="CENTER" spacing="5">
                    <Label fx:id="alertsHeaderLabel" text="Active Alerts" style="-fx-text-fill: #FFFFFF; -fx-font-size: 12px;"/>
                    <Label fx:id="totalAlertsLabel" text="0" style="-fx-text-fill: #FFFFFF; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>
                
                <VBox alignment="CENTER" spacing="5">
                    <Label fx:id="costHeaderLabel" text="Credits Used This Month" style="-fx-text-fill: #FFFFFF; -fx-font-size: 12px;"/>
                    <Label fx:id="costTrendLabel" text="\$0.00" style="-fx-text-fill: #FFFFFF; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>
                
                <VBox alignment="CENTER" spacing="5">
                    <Label fx:id="totalCreditsHeaderLabel" text="Total Credits Used" style="-fx-text-fill: #FFFFFF; -fx-font-size: 12px;"/>
                    <Label fx:id="totalCreditsLabel" text="\$0.00" style="-fx-text-fill: #FFFFFF; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>
                
                <VBox alignment="CENTER" spacing="5">
                    <Label fx:id="remainingCreditsHeaderLabel" text="Remaining Credits" style="-fx-text-fill: #FFFFFF; -fx-font-size: 12px;"/>
                    <Label fx:id="remainingCreditsLabel" text="\$100.00" style="-fx-text-fill: #4CAF50; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>
            </HBox>
        </VBox>
    </top>
    
    <left>
        <VBox spacing="5" style="-fx-background-color: #141414ff; -fx-padding: 10; -fx-pref-width: 200;">
            <Label text="MONITORING" style="-fx-font-size: 14px;-fx-alignment: CENTER; -fx-font-weight: bold; -fx-text-fill: #ED7D27; -fx-padding: 10;"/>
            
            <Button fx:id="ec2Button" text="EC2 Instances" onAction="#handleEC2Monitor" maxWidth="Infinity" style="-fx-font-weight: bold;-fx-font-size: 13px; -fx-text-fill: #FFFFFF; -fx-background-color: #000000 ; -fx-alignment: CENTER_LEFT; -fx-padding: 10;"/>
            
            <Button fx:id="rdsButton" text="RDS Databases" onAction="#handleRDSMonitor" maxWidth="Infinity" style="-fx-font-weight: bold;-fx-font-size: 13px; -fx-text-fill: #FFFFFF; -fx-background-color: #000000 ; -fx-alignment: CENTER_LEFT; -fx-padding: 10;"/>
            
            <Button fx:id="ecsButton" text="ECS Services" onAction="#handleECSMonitor" maxWidth="Infinity" style="-fx-font-weight: bold;-fx-font-size: 13px; -fx-text-fill: #FFFFFF; -fx-background-color: #000000 ; -fx-alignment: CENTER_LEFT; -fx-padding: 10;"/>
            
            <Button fx:id="sageMakerButton" text="SageMaker" onAction="#handleSageMakerMonitor" maxWidth="Infinity" style="-fx-font-weight: bold;-fx-font-size: 13px; -fx-text-fill: #FFFFFF; -fx-background-color: #000000 ; -fx-alignment: CENTER_LEFT; -fx-padding: 10;"/>
            
            <Separator/>
            
            <Label text="GOVERNANCE" style="-fx-font-size: 14px;-fx-alignment: CENTER; -fx-font-weight: bold; -fx-text-fill: #ED7D27; -fx-padding: 10;"/>
            
            <Button fx:id="rulesButton" text="Rules" onAction="#handleRulesManagement" maxWidth="Infinity" style="-fx-font-weight: bold;-fx-font-size: 13px; -fx-text-fill: #FFFFFF; -fx-background-color: #000000 ; -fx-alignment: CENTER_LEFT; -fx-padding: 10;"/>
            
            <Button fx:id="alertsButton" text="Alerts" onAction="#handleAlertsView" maxWidth="Infinity" style="-fx-font-weight: bold;-fx-font-size: 13px; -fx-text-fill: #FFFFFF; -fx-background-color: #000000 ; -fx-alignment: CENTER_LEFT; -fx-padding: 10;"/>
            
            <Separator/>
            
            <Label text="REPORTS" style="-fx-font-size: 14px;-fx-alignment: CENTER; -fx-font-weight: bold; -fx-text-fill: #ED7D27; -fx-padding: 10;"/>
            
            <Button fx:id="billingButton" text="Billing" onAction="#handleBillingReports" maxWidth="Infinity" style="-fx-font-weight: bold;-fx-font-size: 13px; -fx-text-fill: #FFFFFF; -fx-background-color: #000000 ; -fx-alignment: CENTER_LEFT; -fx-padding: 10;"/>
            
            <Separator/>
            
            <Button text="â†» Refresh Dashboard" onAction="#handleRefresh" maxWidth="Infinity" style="-fx-background-color: #ED7D27; -fx-text-fill: #000000; -fx-padding: 10,10,10,10; -fx-font-weight: bold;-fx-font-size: 14px;"/>
        </VBox>
    </left>
    
    <center>
        <VBox fx:id="contentArea" style="-fx-background-color: #000000; -fx-padding: 20;" alignment="CENTER" spacing="10">
            <VBox alignment="CENTER" spacing="10">
                <Label text="Welcome to AWS Cloud Governance Tool" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill:#ED7D27;"/>
                <Label text="Select an option from the sidebar to get started" style="-fx-font-size: 16px; -fx-text-fill: #FFFFFF;"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>