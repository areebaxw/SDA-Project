<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="controllers.ECSController" spacing="15">
    
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    
    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label text="ECS Services Monitor" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        
        <Button text="Refresh" onAction="#handleRefresh"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        
        <Button text="Sync from AWS" onAction="#handleSyncFromAWS"
                style="-fx-background-color: #FF9900; -fx-text-fill: white;"/>
    </HBox>
    
    <Separator/>
    
    <!-- Table -->
    <TableView fx:id="ecsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="clusterColumn" text="Cluster Name" prefWidth="200"/>
            <TableColumn fx:id="serviceColumn" text="Service Name" prefWidth="200"/>
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
            <TableColumn fx:id="desiredColumn" text="Desired" prefWidth="80"/>
            <TableColumn fx:id="runningColumn" text="Running" prefWidth="80"/>
            <TableColumn fx:id="cpuColumn" text="CPU %" prefWidth="80"/>
            <TableColumn fx:id="idleColumn" text="Idle" prefWidth="60"/>
        </columns>
    </TableView>
</VBox>
