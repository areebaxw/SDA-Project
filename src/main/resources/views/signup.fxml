<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="controllers.SignupController" 
      alignment="CENTER" spacing="20" style="-fx-background-color: black;">
    
    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>
    
    <!-- Title -->
    <Label text="AWS Cloud Governance Tool" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #ED7D27;"/>
    <Label text="Create Your Account" style="-fx-font-size: 14px; -fx-text-fill: white;"/>
    
    <Region VBox.vgrow="ALWAYS" minHeight="10"/>
    
    <!-- Signup Form -->
    <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;" 
                hbarPolicy="NEVER" maxHeight="600">
        <VBox spacing="15" alignment="CENTER" maxWidth="400">
            
            <Label text="Sign Up" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #ED7D27"/>
            
            <!-- Full Name Field -->
            <VBox spacing="5">
                <Label text="Full Name:" style="-fx-font-weight: bold; -fx-text-fill: #ED7D27"/>
                <TextField fx:id="fullNameField" promptText="Enter your full name" 
                          style="-fx-pref-width: 350px; -fx-pref-height: 35px; -fx-background-color: #101820; -fx-text-fill: white; -fx-prompt-text-fill: #666;"/>
            </VBox>
            
            <!-- Username Field -->
            <VBox spacing="5">
                <Label text="Username:" style="-fx-font-weight: bold; -fx-text-fill: #ED7D27"/>
                <TextField fx:id="usernameField" promptText="Choose a username" 
                          style="-fx-pref-width: 350px; -fx-pref-height: 35px; -fx-background-color: #101820; -fx-text-fill: white; -fx-prompt-text-fill: #666;"/>
            </VBox>
            
            <!-- Email Field -->
            <VBox spacing="5">
                <Label text="Email:" style="-fx-font-weight: bold; -fx-text-fill: #ED7D27"/>
                <TextField fx:id="emailField" promptText="Enter your email" 
                          style="-fx-pref-width: 350px; -fx-pref-height: 35px; -fx-background-color: #101820; -fx-text-fill: white; -fx-prompt-text-fill: #666;"/>
            </VBox>
            
            <!-- Password Field -->
            <VBox spacing="5">
                <Label text="Password:" style="-fx-font-weight: bold; -fx-text-fill: #ED7D27"/>
                <PasswordField fx:id="passwordField" promptText="Create a password" 
                              style="-fx-pref-width: 350px; -fx-pref-height: 35px; -fx-background-color: #101820; -fx-text-fill: white; -fx-prompt-text-fill: #666;"/>
            </VBox>
            
            <!-- Confirm Password Field -->
            <VBox spacing="5">
                <Label text="Confirm Password:" style="-fx-font-weight: bold; -fx-text-fill: #ED7D27"/>
                <PasswordField fx:id="confirmPasswordField" promptText="Confirm your password" 
                              style="-fx-pref-width: 350px; -fx-pref-height: 35px; -fx-background-color: #101820; -fx-text-fill: white; -fx-prompt-text-fill: #666;"/>
            </VBox>
            
            <Separator prefWidth="350" style="-fx-background-color: #333;"/>
            
            <Label text="AWS Configuration" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #ED7D27"/>
            
            <!-- AWS Access Key Field -->
            <VBox spacing="5">
                <Label text="AWS Access Key:" style="-fx-font-weight: bold; -fx-text-fill: #ED7D27"/>
                <TextField fx:id="accessKeyField" promptText="Enter AWS access key" 
                          style="-fx-pref-width: 350px; -fx-pref-height: 35px; -fx-background-color: #101820; -fx-text-fill: white; -fx-prompt-text-fill: #666;"/>
            </VBox>
            
            <!-- AWS Secret Key Field -->
            <VBox spacing="5">
                <Label text="AWS Secret Key:" style="-fx-font-weight: bold; -fx-text-fill: #ED7D27"/>
                <PasswordField fx:id="secretKeyField" promptText="Enter AWS secret key" 
                              style="-fx-pref-width: 350px; -fx-pref-height: 35px; -fx-background-color: #101820; -fx-text-fill: white; -fx-prompt-text-fill: #666;"/>
            </VBox>
            
            <!-- AWS Region Field -->
            <VBox spacing="5">
                <Label text="AWS Region:" style="-fx-font-weight: bold; -fx-text-fill: #ED7D27"/>
                <ComboBox fx:id="regionComboBox" promptText="Select AWS region" 
                         style="-fx-pref-width: 350px; -fx-pref-height: 35px; -fx-background-color: #101820;"/>
            </VBox>
            
            <!-- Error Label -->
            <Label fx:id="errorLabel" text="Error message" 
                   style="-fx-text-fill: red; -fx-font-weight: bold;" visible="false" wrapText="true" maxWidth="350"/>
            
            <!-- Signup Button -->
            <Button fx:id="signupButton" text="Create Account" onAction="#handleSignup"
                    style="-fx-background-color: #ED7D27; -fx-text-fill: black; -fx-font-size: 14px; -fx-font-weight: bold; -fx-pref-width: 350px; -fx-pref-height: 40px; -fx-cursor: hand;"/>
            
            <!-- Back to Login Link -->
            <HBox spacing="5" alignment="CENTER">
                <Label text="Already have an account?" style="-fx-text-fill: white;"/>
                <Hyperlink fx:id="backToLoginLink" text="Login here" onAction="#handleBackToLogin" 
                          style="-fx-text-fill: #ED7D27; -fx-underline: true;"/>
            </HBox>
            
        </VBox>
    </ScrollPane>
    
    <Region VBox.vgrow="ALWAYS"/>
    
    
</VBox>
